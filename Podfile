# Uncomment this line to define a global platform for your project
# platform :ios, '6.0'

target 'AWAD' do
    # Dependency Injection
    pod 'Typhoon'
    pod 'JLRoutes'					# Advanced URL parsing with a block-based callback API
    pod 'RestKit/ObjectMapping'     # The best part of the great framework to handle XML and JSON mapping into model objects
    pod 'DateTools'                 # Datetime heavy lifting
    pod 'PromiseKit', '~>1.5.0'     # Complete implementation of promises (vesions 2.0.0 and above are written in Swift)
    pod 'Asterism'                  # Nice & fast collection operations
end

# Testing necessities
target 'Specs', :exclusive => true do
    pod 'Specta'
    pod 'Expecta'
    pod 'OCMockito'
    pod 'Asterism'
    pod 'OHHTTPStubs'
end

